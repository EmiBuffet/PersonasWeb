@model IEnumerable<PersonasWeb.Models.Persona>
@{
    ViewData["Title"] = "Lista Personas";
}

<div class="container-lg col-4">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Apellido)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => persona.Id)</td>
                        <td>@Html.DisplayFor(m => persona.Nombre)</td>
                        <td>@Html.DisplayFor(m => persona.Apellido)</td>
                        <td>
                            <a class="btn btn-secondary" asp-action="ConsultarPersona" asp-route-id="@persona.Id"><i class="bi bi-info-circle-fill"></i>Detalle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>